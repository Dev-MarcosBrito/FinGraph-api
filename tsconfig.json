{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "target": "es2020",
    "verbatimModuleSyntax": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
